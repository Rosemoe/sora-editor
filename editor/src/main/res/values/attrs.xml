<resources>
    <!-- Style attribute for CodeEditor -->
    <attr name="codeEditorStyle" format="reference" />

    <declare-styleable name="CodeEditor">
        <attr name="scrollbarTrackHorizontal" format="reference" />
        <attr name="scrollbarThumbHorizontal" format="reference" />
        <attr name="scrollbarTrackVertical" format="reference" />
        <attr name="scrollbarThumbVertical" format="reference" />

        <attr name="lnPanelPositionMode">
            <enum name="fixed" value="0" />
            <enum name="follow" value="1" />
        </attr>
        <attr name="lnPanelPosition">
            <flag name="left" value="1" />
            <flag name="top" value="2" />
            <flag name="right" value="4" />
            <flag name="bottom" value="8" />
            <flag name="center" value="15" />
        </attr>

        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="dividerMargin" format="dimension" />
        <attr name="lineNumberVisible" format="boolean" />
        <attr name="autoCompleteEnabled" format="boolean" />
        <attr name="symbolCompletionEnabled" format="boolean" />
        <attr name="cursorBlinkPeriod" format="integer" />
        <attr name="verticalScrollbarEnabled" format="boolean" />
        <attr name="horizontalScrollbarEnabled" format="boolean" />
        <attr name="pinLineNumber" format="boolean" />
        <attr name="wordwrapMode">
            <enum name="off" value="0" />
            <!-- Without anti-word-breaking -->
            <enum name="basic" value="1" />
            <!-- With anti-word-breaking -->
            <enum name="standard" value="2" />
        </attr>
        <attr name="highlightCurrentLine" format="boolean" />
        <attr name="highlightCurrentBlock" format="boolean" />
        <attr name="highlightBracketPair" format="boolean" />
        <attr name="ligatures" format="boolean" />
        <attr name="renderFunctionChars" format="boolean" />
        <attr name="scalable" format="boolean" />
        <attr name="tabWidth" format="integer" />
    </declare-styleable>

</resources>